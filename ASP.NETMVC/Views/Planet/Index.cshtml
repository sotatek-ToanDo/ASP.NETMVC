@inject App.Services.PanetService planetService
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div>
       <h1>Cac hanh tinh trong he mat troi</h1>
    </div>
    <div class="list-group">
        @foreach (var planet in planetService)
        {
            <a class="list-group-item list-group-item-action" asp-controller="Planet" asp-action="@planet.Name">
                @planet.VnName - @planet.Name
            </a>
        }
    </div>
</body>
</html>
<p>@Url.RouteUrl("neptune1")</p>
<p>@Url.RouteUrl("neptune2")</p>
<p>@Url.RouteUrl("neptune3")</p>